<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}TravelExplorer{% endblock %}</title>
    
    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Main compiled CSS #}
    <link rel="stylesheet" href="{{ asset('build/css/main.css') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body>
    {{ include('includes/navigation.html.twig') }}
    
    <main role="main" class="main-content{% if app.request.get('_route') != 'destination_detail' %} with-fixed-nav{% endif %}">
        {% block content %}{% endblock %}
    </main>
    
    {{ include('includes/footer.html.twig') }}

    {# Bootstrap JS Bundle #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>


