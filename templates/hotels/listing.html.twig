{% extends 'layouts/layout.html.twig' %}

{% block title %}Luxuriöse Hotels & Resorts - Travel Agency{% endblock %}

{% block content %}
    {# Hero Section #}
    <section class="pt-24 pb-16 bg-gradient-to-br from-blue-50 to-purple-50">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center max-w-3xl mx-auto">
                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                    Luxuriöse
                    <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"> Hotels & Resorts</span>
                </h1>
                <p class="text-xl text-gray-600 mb-8">
                    Entdecken Sie handverlesene Hotels und Resorts für unvergessliche Aufenthalte weltweit.
                </p>
            </div>
        </div>
    </section>

    {# Hotels Grid #}
    <section class="py-16">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for hotel in hotels %}
                    <div class="group overflow-hidden hover:shadow-xl transition-all duration-300 border-0 shadow-lg rounded-lg bg-white">
                        <div class="relative">
                            {% if hotel.getImage() %}
                                {{ hotel.getImage()|raw }}
                            {% else %}
                                <img src="/static/images/hotel-placeholder.jpg" 
                                     alt="{{ hotel.getName() }}" 
                                     class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300">
                            {% endif %}
                            
                            {% if hotel.getFeatured() %}
                                <span class="absolute top-4 left-4 bg-gradient-to-r from-orange-500 to-red-500 text-white border-0 px-3 py-1 rounded-full text-sm font-medium">
                                    Empfohlen
                                </span>
                            {% endif %}
                            
                            {% if hotel.getRating() %}
                                <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-2 py-1 rounded-lg flex items-center space-x-1">
                                    <svg class="h-4 w-4 fill-yellow-400 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                    </svg>
                                    <span class="text-sm font-medium">{{ hotel.getRating()|number_format(1, '.', '') }}</span>
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="p-6">
                            <div class="flex justify-between items-start mb-4">
                                <div class="flex-1">
                                    <h3 class="text-xl font-semibold group-hover:text-blue-600 transition-colors mb-1">
                                        {{ hotel.getName() }}
                                    </h3>
                                    <p class="flex items-center text-gray-500 text-sm">
                                        <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        </svg>
                                        {{ hotel.getLocation() }}
                                    </p>
                                </div>
                                <div class="text-right ml-4">
                                    {% if hotel.getOriginalPrice() and hotel.getOriginalPrice() > hotel.getPrice() %}
                                        <div class="text-sm text-gray-400 line-through">
                                            €{{ hotel.getOriginalPrice()|number_format(0, ',', '.') }}
                                        </div>
                                    {% endif %}
                                    <div class="text-2xl font-bold text-blue-600">
                                        €{{ hotel.getPrice()|number_format(0, ',', '.') }}
                                    </div>
                                    <div class="text-xs text-gray-500">pro Nacht</div>
                                </div>
                            </div>
                            
                            <p class="text-gray-600 text-sm leading-relaxed mb-4">
                                {{ hotel.getDescription() }}
                            </p>

                            {% if hotel.getAmenities() %}
                                <div class="flex flex-wrap gap-2 mb-4">
                                    {% for amenity in hotel.getAmenities() %}
                                        <div class="flex items-center text-xs bg-gray-100 rounded-full px-2 py-1">
                                            {% if amenity == 'Wifi' %}
                                                <svg class="h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/>
                                                </svg>
                                            {% elseif amenity == 'Pool' or amenity == 'Spa' or amenity == 'Strand' %}
                                                <svg class="h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                                                </svg>
                                            {% elseif amenity == 'Restaurant' or amenity == 'Bar' %}
                                                <svg class="h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h18v18H3V3z"/>
                                                </svg>
                                            {% elseif amenity == 'Parkplatz' %}
                                                <svg class="h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                </svg>
                                            {% else %}
                                                <svg class="h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                                </svg>
                                            {% endif %}
                                            {{ amenity }}
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            
                            <div class="flex items-center justify-between">
                                <div class="flex items-center text-sm text-gray-500">
                                    <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                    </svg>
                                    {{ hotel.getReviewCount() }} Bewertungen
                                </div>
                                
                                <a href="{{ path('hotel_detail', {'id': hotel.getId()}) }}" 
                                   class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all">
                                    Buchen
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {% if hotels is empty %}
                <div class="text-center py-12">
                    <p class="text-gray-500 text-lg">Derzeit sind keine Hotels verfügbar.</p>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}