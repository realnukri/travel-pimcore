{% extends 'layouts/layout.html.twig' %}

{% block title %}Flüge - TravelExplorer{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="container">
    {# Hero Section #}
    <section class="hero-section">
        <div class="text-center">
            <h1 style="font-size: 3rem; font-weight: 700; margin-bottom: 1.5rem;">
                Finden Sie Ihren perfekten Flug
            </h1>
            <p style="font-size: 1.25rem; color: #6B7280; max-width: 48rem; margin: 0 auto;">
                Entdecken Sie die Welt mit unseren günstigen Flugpreisen. 
                Vergleichen Sie Hunderte von Airlines und finden Sie die besten Deals.
            </p>
        </div>
        
        {# Flight Search Widget #}
        <div class="search-widget">
            <form action="{{ path('flights_search') }}" method="GET" class="search-form">
                <div class="form-group">
                    <label class="form-label" for="departure">Von</label>
                    <input type="text" 
                           id="departure" 
                           name="departure" 
                           class="form-input" 
                           placeholder="z.B. Berlin, München, Frankfurt"
                           list="departure-cities"
                           required>
                    <datalist id="departure-cities">
                        <option value="Berlin">
                        <option value="München">
                        <option value="Frankfurt">
                        <option value="Hamburg">
                        <option value="Köln">
                        <option value="Stuttgart">
                        <option value="Düsseldorf">
                        <option value="Nürnberg">
                    </datalist>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="arrival">Nach</label>
                    <input type="text" 
                           id="arrival" 
                           name="arrival" 
                           class="form-input" 
                           placeholder="z.B. Paris, London, Rom"
                           list="arrival-cities"
                           required>
                    <datalist id="arrival-cities">
                        <option value="Paris">
                        <option value="London">
                        <option value="Rom">
                        <option value="Barcelona">
                        <option value="Amsterdam">
                        <option value="Wien">
                        <option value="Prag">
                        <option value="Madrid">
                        <option value="Mailand">
                        <option value="Venedig">
                        <option value="New York">
                        <option value="Dubai">
                        <option value="Istanbul">
                    </datalist>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="departure_date">Hinflug</label>
                    <input type="date" 
                           id="departure_date" 
                           name="departure_date" 
                           class="form-input"
                           min="{{ 'now'|date('Y-m-d') }}"
                           required>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="return_date">Rückflug</label>
                    <input type="date" 
                           id="return_date" 
                           name="return_date" 
                           class="form-input"
                           min="{{ 'now'|date('Y-m-d') }}">
                </div>
                
                <button type="submit" class="search-button">
                    Flüge suchen
                </button>
            </form>
        </div>
    </section>
    
    {# Popular Destinations from Data Objects #}
    {% if popularDestinations %}
    <section style="padding: 4rem 0;">
        <h2 class="section-title">Beliebte Reiseziele</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 1.5rem;">
            {% for destination, data in popularDestinations %}
            <a href="{{ path('flight_detail', {'id': data.cheapestFlightId}) }}" class="destination-card" style="display: block; text-decoration: none; color: inherit;">
                <div class="destination-header">
                    <div class="destination-flag">✈️</div>
                    <div class="destination-price">
                        <div class="price-amount">ab €{{ data.lowestPrice }}</div>
                        <div class="price-label">pro Person</div>
                    </div>
                </div>
                <div class="destination-info">
                    <h3>{{ data.city }}</h3>
                    <p class="destination-country">{{ data.country }}</p>
                    <p style="margin-top: 0.5rem; font-size: 0.875rem; color: #9CA3AF;">
                        {{ data.flights|length }} Flüge verfügbar
                    </p>
                </div>
            </a>
            {% endfor %}
        </div>
    </section>
    {% endif %}
    
    {# All Flights from Data Objects #}
    {% if flights %}
    <section class="flights-section">
        <h2 class="section-title">Verfügbare Flüge</h2>
        <div class="flights-grid">
            {% for flight in flights %}
            <a href="{{ path('flight_detail', {'id': flight.getId()}) }}" class="flight-card" style="display: block; text-decoration: none; color: inherit;">
                <div class="flight-header">
                    <div class="flight-route">
                        <div class="flight-cities">
                            <span>{{ flight.getFrom() }}</span>
                            <span>→</span>
                            <span>{{ flight.getTo() }}</span>
                        </div>
                        <div class="flight-times">
                            <span>{{ flight.getDepartureTime() }}</span>
                            <span>-</span>
                            <span>{{ flight.getArrivalTime() }}</span>
                        </div>
                    </div>
                    <div class="flight-price-badge">
                        €{{ flight.getPrice() }}
                    </div>
                </div>
                
                <div class="flight-details">
                    <div class="flight-detail-item">
                        <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>{{ flight.getDuration() }}</span>
                    </div>
                    <div class="flight-detail-item">
                        <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M12 5l7 7-7 7"/>
                        </svg>
                        <span>{{ flight.getAirline('de') }}</span>
                    </div>
                    <div class="flight-detail-item">
                        <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>{{ flight.getStops() }}</span>
                    </div>
                    <div class="flight-detail-item">
                        {% if flight.getRating() %}
                        <span class="rating-stars">
                            {% for i in 1..5 %}
                                {% if i <= flight.getRating() %}★{% else %}☆{% endif %}
                            {% endfor %}
                        </span>
                        <span>{{ flight.getRating() }}</span>
                        {% endif %}
                    </div>
                </div>
                
                {% if flight.getAmenities() %}
                <div class="flight-amenities">
                    {% for amenity in flight.getAmenities() %}
                    <span class="amenity-tag">{{ amenity }}</span>
                    {% endfor %}
                </div>
                {% endif %}
                
                {% if flight.getBaggage() %}
                <div style="margin-top: 0.75rem; font-size: 0.75rem; color: #6B7280;">
                    <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" style="display: inline-block; vertical-align: middle;">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                    </svg>
                    {{ flight.getBaggage() }}
                </div>
                {% endif %}
            </a>
            {% endfor %}
        </div>
    </section>
    {% endif %}
    
    {# Features #}
    <section class="features-section">
        <h2 class="section-title">Warum bei uns buchen?</h2>
        <div class="features-grid">
            {% for feature in features %}
            <div class="feature-item">
                <div class="feature-icon">
                    {% if feature.icon == 'plane' %}
                    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                    {% elseif feature.icon == 'clock' %}
                    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    {% elseif feature.icon == 'star' %}
                    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                    </svg>
                    {% elseif feature.icon == 'trending-up' %}
                    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                    </svg>
                    {% endif %}
                </div>
                <h3 class="feature-title">{{ feature.title }}</h3>
                <p class="feature-description">{{ feature.description }}</p>
            </div>
            {% endfor %}
        </div>
    </section>
</div>
{% endblock %}