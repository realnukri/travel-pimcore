{% extends 'layouts/layout.html.twig' %}

{% block title %}Hotels - TravelExplorer{% endblock %}

{% block content %}
    <div class="hotels-page">
        {# Hero Section #}
        <section class="hero-section py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); margin-top: -76px; padding-top: 156px;">
            <div class="container">
                <h1 class="display-4 text-white mb-4">Unsere Hotels</h1>
                <p class="lead text-white">{{ totalCount|default(0) }} Hotels in unserer Auswahl</p>
            </div>
        </section>

        {# Hotels Display #}
        <section class="py-5">
            <div class="container">
                {% if allHotels|default([])|length > 0 %}
                    {# Featured Hotels #}
                    {% if featuredHotels|default([])|length > 0 %}
                    <h2 class="mb-4">Empfohlene Hotels</h2>
                    <div class="row mb-5">
                        {% for hotel in featuredHotels %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow">
                                <div class="card-body">
                                    <span class="badge bg-warning text-dark mb-2">Empfohlen</span>
                                    <h5 class="card-title">{{ hotel.getName('de') }}</h5>
                                    <p class="text-muted small">
                                        <i class="bi bi-geo-alt"></i> {{ hotel.getLocation() }}
                                    </p>
                                    <div class="mb-2">
                                        {% if hotel.getRating() %}
                                        <span class="badge bg-primary">
                                            ⭐ {{ hotel.getRating()|number_format(1, ',', '.') }}
                                        </span>
                                        {% endif %}
                                        {% if hotel.getReviewCount() %}
                                        <small class="text-muted">({{ hotel.getReviewCount() }} Bewertungen)</small>
                                        {% endif %}
                                    </div>
                                    <p class="card-text small">{{ hotel.getDescription('de')|default('')|slice(0, 100) }}...</p>
                                    <div class="mt-3">
                                        <strong class="text-primary">€{{ hotel.getPrice()|default(0)|number_format(0, ',', '.') }}</strong>
                                        <small class="text-muted">/Nacht</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% endif %}

                    {# All Hotels #}
                    <h2 class="mb-4">Alle Hotels</h2>
                    <div class="row">
                        {% for hotel in regularHotels|default([]) %}
                        <div class="col-md-6 col-lg-3 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-title">{{ hotel.getName('de') }}</h6>
                                    <p class="text-muted small">
                                        <i class="bi bi-geo-alt"></i> {{ hotel.getLocation() }}
                                    </p>
                                    {% if hotel.getRating() %}
                                    <div class="mb-2">
                                        <small>⭐ {{ hotel.getRating()|number_format(1, ',', '.') }}</small>
                                        {% if hotel.getReviewCount() %}
                                        <small class="text-muted">({{ hotel.getReviewCount() }})</small>
                                        {% endif %}
                                    </div>
                                    {% endif %}
                                    <div class="mt-3">
                                        <strong class="text-primary">€{{ hotel.getPrice()|default(0)|number_format(0, ',', '.') }}</strong>
                                        <small class="text-muted">/Nacht</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        <h4>Keine Hotels gefunden</h4>
                        <p>Es wurden keine Hotels in der Datenbank gefunden. Bitte stellen Sie sicher, dass die Hotels importiert und veröffentlicht wurden.</p>
                    </div>
                {% endif %}
            </div>
        </section>
    </div>
{% endblock %}